{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,

		/* Experimental Options */
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src"]
}
