{
    "name": "auth-nodejs",
    "version": "1.0.0",
    "main": "index.js",
    "author": "michaeltp93 <michael.trejosp@hotmail.es>",
    "repository": {
        "type": "git",
        "url": "https://github.com/michaeltp93/auth-nodejs"
    },
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
        "test": "cross-env NODE_ENV=test jest --runInBand",
        "test:clearCache": "cross-env NODE_ENV=test jest --clearCache",
        "test:silent": "cross-env NODE_ENV=test jest --watchAll --silent --noStackTrace",
        "test:staged": "cross-env NODE_ENV=test jest --findRelatedTests",
        "test:coverage": "jest --coverage --silent --noStackTrace",
        "prepare": "husky install",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "style:check": "prettier --check src/**/*.ts",
        "style:fix": "prettier --write src/**/*.ts",
        "commit:lint": "lint-staged",
        "typeorm": "ts-node-dev node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.34",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.7",
        "@types/jest": "^26.0.24",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/node": "^16.3.1",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "cross-env": "^7.0.3",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "faker": "^5.5.3",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.2",
        "sqlite3": "^5.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "prettier --write",
            "eslint --fix",
            "cross-env NODE_ENV=test jest --findRelatedTests"
        ]
    }
}
